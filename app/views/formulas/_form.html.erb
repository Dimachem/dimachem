<%= form_for @formula, html: {multipart: true} do |f| %>
  <% if @formula.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@formula.errors.count, "error") %> prohibited this formula from being saved:</h2>

      <ul>
      <% @formula.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="controls-row">
    <div class="col-sm-4">
      <%= f.label :code, class: "control-label" %>
      <div class="controls">
        <%= f.text_field :code, class: "form-control" %>
      </div>
    </div>

    <div class="col-sm-4">
      <%= f.label :name, class: "control-label" %>
      <div class="controls">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="col-sm-4">
      <%= f.label :status, class: "control-label" %>
      <div class="controls">
        <%= f.select(:state, Formula.state_machine.states.map{|s| [s.name, s.name] }, {}, {class: "form-control"}) %>
      </div>
    </div>
  </div>

  <div class="controls-row">
    <div class="col-sm-4">
      <%= f.label :comments, class: "control-label" %>
      <div class="controls">
        <%= f.text_field :comments, class: "form-control" %>
      </div>
    </div>

    <div class="col-sm-4">
      <%= f.label :sales_to_date, class: "control-label" %>
      <div class="controls">
        <%= f.text_field :sales_to_date, class: "form-control" %>
      </div>
    </div>

    <div class="col-sm-4">
      <%= f.label :reviewed_by, class: "control-label" %>
      <div class="controls">
        <%= f.text_field :reviewed_by, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="controls-row">
    <div class="col-sm-4">
    <div class="control-group">
      <%= f.label :assets, class: 'control-label' %>
      <div class="controls">
        <%= f.fields_for :formulas_assets do |nested_f|%>
          <% if nested_f.object.asset.present? %>
            <%= link_to nested_f.object.asset.original_filename, nested_f.object.asset.url %>
          <% else %>
            <%= nested_f.file_field :asset %>
          <% end %>
        <% end %>
      </div>
    </div>
    </div>
  </div>

  <table class="table table-striped table-condensed table-responsive">
    <thead>
      <tr>
        <th>Progress Step</th>
        <th>Completed</th>
        <th>Completed On</th>
        <th>Comments</th>
      </tr>
    </thead>
    <tbody>
    <%= f.fields_for :formulas_progress_steps do |nested_f| %>
      <tr>
        <td>
          <%= nested_f.hidden_field :progress_step_id %>
          <%= nested_f.label nested_f.object.progress_step.description, class: 'control-label' %>
        </td>
        <td><%= nested_f.check_box :completed, class: "form-control" %></td>
        <td><%= nested_f.date_field :completed_on, class: "form-control", placeholder: 'YYYY-MM-DD' %></td>
        <td><%= nested_f.text_field :comments, class: "form-control" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
  </div>
<% end %>
