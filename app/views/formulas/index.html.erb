<h3>New Formula Progress</h3>

<%= search_form_for @query, class: "form-inline" do |f| %>
  <div class="form-group">
    <%= f.label :state_eq, "Status is", class: "control-label" %>
    <%= f.select(:state_eq, @state_select_options, {include_blank: 'all'},
      {selected: @state_selected_option, class: "form-control"}) %>
  </div>

  <%= f.submit nil, class: 'btn btn-default' %>
<% end %>

<div class="table-responsive">
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th><%= sort_link @query, :code, "Code" %></th>
      <th>Name</th>
      <th><%= sort_link @query, :priority, "Priority" %></th>
      <th>Status</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @formulas.each do |formula| %>
      <tr>
        <td><%= formula.code %></td>
        <td><%= formula.name %></td>
        <td><%= formula.priority %></td>
        <td><%= formula.state %></td>
        <td><%= link_to 'Show', formula, class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_formula_path(formula), class: 'btn btn-default btn-xs' %></td>
        <td><%#= link_to 'Destroy', formula, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Formula', new_formula_path, class: 'btn btn-primary' %>
