<h3>
  Users
</h3>

<div class="table-responsive">
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Username</th>
      <th>Roles</th>
      <th>Last Sign In</th>
      <th>Last Sign In IP</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.roles.map(&:name).join(', ') %></td>
        <td><%= user.last_sign_in_at %></td>
        <td><%= user.last_sign_in_ip %></td>
        <td><%#= link_to 'Show', user, class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit Roles', edit_user_path(user), class: 'btn btn-default btn-xs' %></td>
        <td><%#= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
